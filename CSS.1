*{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
body{
  background-color: #7aacff;
}
.container{
  width:auto;
  max-width: 800px;
  margin-bottom: 60%;
  position: absolute;
  transform: translate(-50%,-50%);
  top:13%; 
  left: 50%;
  overflow: hidden;
  border-radius: 8px;
  box-shadow: 10px 25px 30px rgb(234, 234, 240);
  transform: translateX(-50%);
}
.wrapper{
  width: 100%;
  height: 300px;
  
  display: flex;
  animation: slide 16s infinite;
}
@keyframes slide{
  0%{
      transform: translateX(0);
  }
  25%{
      transform: translateX(0);
  }
  30%{
      transform: translateX(-100%);
  }
  50%{
      transform: translateX(-100%);
  }
  55%{
      transform: translateX(-200%);
  }
  75%{
      transform: translateX(-200%);
  }
  80%{
      transform: translateX(-300%);
  }
  100%{
      transform: translateX(-300%);
  }
}
img{
  width: 100%;
}
